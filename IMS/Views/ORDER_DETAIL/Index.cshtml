@model IEnumerable<IMS.ORDER_DETAIL>

@{
    ViewBag.Title = "IMS | Order";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}

<h2>Order Details</h2>

<p style="margin-top:20px;">
    @Html.ActionLink("Create New Order", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Unit_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ORDER.Order_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PAYMENT.Payment_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRODUCT.Product_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Unit_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ORDER.Order_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PAYMENT.Payment_Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.Product_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Order_Detail_ID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Order_Detail_ID }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Order_Detail_ID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
